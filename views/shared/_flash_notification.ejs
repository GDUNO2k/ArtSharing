<script>
  toastr.options = {
    "closeButton": false,
    "debug": false,
    "newestOnTop": false,
    "progressBar": false,
    "positionClass": "toast-top-right",
    "preventDuplicates": false,
    "onclick": null,
    "showDuration": "300",
    "hideDuration": "1000",
    "timeOut": "5000",
    "extendedTimeOut": "1000",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
  }

  <% if(req.query.success) { %>
    toastr["success"]("<%= req.query.success %>");
  <% } %>

  <% if (req.flash) { %>
      <% for (const message of req.flash.popAll()) { %>
          <% if (message.type == 'success') { %>
            toastr["success"]("<%= message.text %>")
          <% } else { %>
            toastr["error"]("<%= message.text %>")
          <% } %>
      <% } %>
  <% } %>
</script> 
