<!-- if logged in -->
<% if(req.user) { %>

    <div class="col-lg-2 col-sm-4 hidden-xs">
    <div class="avatar pull-left">
        <a href="/artist/<%= req.user.email %>/show"> 
            <img src="<%= req.user.avatar || '/images/Avatar.png' %>" alt="avatar" />
        </a>
        <span class="status"></span>
    </div>
    <div class="selectuser pull-left">
        <div class="btn-group pull-right dropdown">
        <button
            class="btn btn-default dropdown-toggle"
            type="button"
            id="dropdownMenu1"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="true"
        >
            <%= req.user.name %>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="/artist/<%= req.user.email %>/show">My page</a></li>
            <li><a href="/user/edit-profile">Edit profile</a></li>
            <li><a href="/user/change-password">Change password</a></li>
            <li><a href="/auth/logout">Log out</a></li>
        </ul>
        </div>
    </div>
    <div class="clearfix"></div>
    </div>  
<% } else { %>
    <!-- not logged in -->
    <div class="col-lg-2 col-sm-12 hidden-xs">
    <div class="loginsignup pull-right">
        <a href="/auth/login">Login</a>
        .
        <a href="/auth/register">Register</a>
    </div>
    <div class="clearfix"></div>
    </div>
<% } %>