<% bodyClass = "channel" %>

<%- include("../shared/_header.ejs") %>

<%- include("./_artist_top.ejs") %>

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 channels">

                <!-- Featured Videos -->
                <div class="content-block ">
                
                    <div class="channels-content">
                        <div class="clearfix"></div>
                        <div class="theme-section">
                        <div class="row">
                           <div class="cb-content py-3">

                            <h3 class="text-muted">Favorite Artworks</h3>

                            <div class="row">

                            <% if(req.isOwner) { %>
                            <div class=" col-lg-3 col-sm-6 videoitem">
                                <div class="b-video upload-artwork">
                                    <a href="/artwork">
                                        <i class="fa fa-plus"></i>
                                        Browse artworks
                                    </a>
                                </div>
                            </div>
                            <% } %>

                            <% for(const artwork of artworks) { %>
                                <%- include("../artwork/_artwork.ejs", {artwork}) %>
                            <% } %>

                            <% if (artworks.length == 0) { %>
                                <p class="text-center">
                                    <em class="text-danger">No data.</em>
                                </p>    
                            <% } %>
                        </div>
                    </div>
                          </div>
                        </div>
                        </div>
                    </div>
                </div>
                <!-- /Featured Videos -->

            </div>
        </div>
    </div>
</div>

<%- include("../shared/_footer.ejs") %>
