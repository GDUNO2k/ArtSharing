<%- include("../shared/_header.ejs") %>

<div class="content-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 text-center">
        <h1>Change Password</h1>
          <form action="/user/change-password" method="post">

          <div class="form-group">
            <label for="cr_password">Current password</label>
            <input
              type="password"
              class="form-control"
              id="cr_password"
              placeholder="Duong"
              name="cr_password"
            />
            <% if (errors.cr_password) { %>
            <p class="form-text text-danger"><%= errors.cr_password.msg %></p>
            <% } %>
          </div>

          <div class="form-group">
            <label for="password">New password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              placeholder="Duong"
              name="password"
            />
            <% if (errors.password) { %>
            <p class="form-text text-danger"><%= errors.password.msg %></p>
            <% } %>
          </div>

          <div class="form-group">
            <label for="cf_password">Confirm password</label>
            <input
              type="password"
              class="form-control"
              id="cf_password"
              placeholder="Duong"
              name="cf_password"
            />
            <% if (errors.cf_password) { %>
            <p class="form-text text-danger"><%= errors.cf_password.msg %></p>
            <% } %>
          </div>

          <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
              <button type="submit" class="btn btn-cv1">Save</button>
            </div>
            <div class="hidden-xs"></div>
          </div>
          <div class="row hidden-xs"></div>
          <div class="visible-xs text-center mt-30">
            <span class="forgottext"
              ><a href="#">Already have an account?</a></span
            >
            <span class="signuptext"><a href="#">Login here</a></span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../shared/_footer.ejs") %>
