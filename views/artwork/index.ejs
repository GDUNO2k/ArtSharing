<%- include("../shared/_header.ejs")  %>

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 channels">
                <div class="content-block head-div">
                    <div class="cb-header">
                        <div class="row">
                            <div class="col-lg-8 col-sm-8 col-xs-10">
                                <ul class="list-inline">
                                <li>
                                    <a href="#" class="color-active">Most Popular</a>
                                </li>
                                <li><a href="#">Trending</a></li>
                                <li class="hidden-xs"><a href="#">Most Recent</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-4 col-sm-4 col-xs-2">
                                <div class="cb-search channels-search">
                                <form action="">
                                    <label>
                                    <input type="search" name="keyword" placeholder="Search Artworks ...">
                                    <i class="fa fa-search"></i>
                                    </label>
                                </form>
                                </div>
                            </div>
                            </div>
                    </div>
                </div>
                <div class="cb-content videolist">
                    <div class="row">
                        <% for(const artwork of artworks) { %>
                        <div class="col-lg-3 col-sm-6 videoitem">
                            <div class="b-video">
                                <div class="v-img">
                                    <a href="/artwork/<%= artwork._id %>/show">
                                        <img src="<%= artwork.path %>" alt="" />
                                    </a>
                                    <div class="time"><%= artwork.category.name %></div>
                                </div>
                                <div class="v-desc">
                                    <a href="single-video-tabs.html"><%= artwork.title %></a>
                                </div>
                                <div class="v-views">
                                    <i class="fa fa-eye"></i> <%= artwork.noViews %> Views 
                                    <span style="margin-left: 15px"><i class="fa fa-heart"></i> <%= artwork.likes.length %> Likes</span>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>

                    <% if (artworks.length == 0) { %>
                        <p class="text-center">
                            <em class="text-danger">No data.</em>
                        </p>
                    <% } else { %>
                        
                        <%- include("../shared/_pagination.ejs")  %>
                    
                    <% } %>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- footer -->
<%- include("../shared/_footer.ejs")  %>
<!-- /footer -->    