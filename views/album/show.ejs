<% bodyClass = "channel" %>

<%- include("../shared/_header.ejs") %>

<%- include("../artist/_artist_top.ejs") %>

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 channels">

                <!-- Featured Videos -->
                <div class="content-block ">
                    <div class="cb-header">
                        <div class="row">
                            
                            <div class="col-lg-8 col-xs-6">
                                <h3 class="text-muted">Album: <%= album.title %></h3>
                            </div>
                            <div class="col-lg-4 col-xs-6">
                                <div class="btn-group pull-right bg-clean">

                                    <% if(req.isOwner) { %>
                                        <a href="/album/<%= album._id %>/edit" class="btn btn-primary" style="padding: 5px 10px; margin-right: 15px">
                                            <i class="fa fa-edit"></i>
                                            Edit
                                        </a>
                                    <% } %>
                                    
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Album (<%= album.title %>)
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <% for(const album of albums) { %>
                                        <li>
                                            <a href="/album/<%= album._id %>/show"><%= album.title %></a>
                                        </li>
                                        <% } %>
                                    </ul>
                                </div>

                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                
                    <div class="channels-content">
                        <div class="clearfix"></div>
                        <div class="theme-section">
                        <div class="row">
                           <div class="cb-content py-3">
                            <div class="row">

                            <% if(req.isOwner) { %>
                            <div class=" col-lg-3 col-sm-6 videoitem">
                                <div class="b-video upload-artwork">
                                    <a href="/artwork/create?album=<%= album._id %>">
                                        <i class="fa fa-plus"></i>
                                        Upload artwork
                                    </a>
                                </div>
                            </div>
                            <% } %>

                            <% for(const artwork of artworks) { %>
                                <%- include("./_artwork.ejs", {artwork}) %>
                            <% } %>

                            <% if (artworks.length == 0) { %>
                                <p class="text-center">
                                    <em class="text-danger">No data.</em>
                                </p>    
                            <% } %>
                        </div>
                    </div>
                          </div>
                        </div>
                        </div>
                    </div>
                </div>
                <!-- /Featured Videos -->

            </div>
        </div>
    </div>
</div>

<%- include("../shared/_footer.ejs") %>
